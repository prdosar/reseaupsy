        }
    }
}



.white-card {
    background-color: $cWhite;
    box-shadow: 0px 2px 3px $cGrayShadow;
    border-radius: 10px;
    margin: 20px 0px;
    padding: 20px;
}

.legal {
    font-size: 14px;
    padding-top: 40px;
    padding-bottom: 10px;

    .legal-right {

        span {
            @include med-767 {
                display: block;
            }
        }

        span:not(:last-child):after {
            content: '|';
            padding-left: 5px;

            @include med-767 {
                content: '';
                padding-left: 0px;
            }
        }
    }

    a {
        color: $cBlack;
        text-decoration: none;

        &:hover {
            text-decoration: underline;
        }
    }

    .designer {
        color: $cPurple;
        text-decoration: underline;

        &:hover {
            text-decoration: none;
        }
    }
}

.page-instruction {
    margin-bottom: 20px;
}

.back-to-login {
    font-size: 16px;
    text-decoration: none;
    color: $cBlack;

    &:hover {
        text-decoration: underline;
    }

    img {
        transform: rotate(90deg);
        width: 15px;
        height: 15px;
        margin-top: -2px;
        margin-right: 5px;
    }
}



.table-responsive {
    border-radius: 10px;
    box-shadow: 0px 2px 3px $cGrayShadow;
}

table {
    font-size: 16px;
    width: 100%;
    border-radius: 10px;

    @include med-1199 {
        font-size: 15px;
    }

    @include med-767 {
        font-size: 14px;
    }



    thead {
        th {
            background-color: $cpurpleLight !important;
            color: $cWhite;
            font-weight: normal;
            padding: 8px 15px;

            &:first-child {
                border-top-left-radius: 10px;
            }

            &:last-child {
                border-top-right-radius: 10px;
            }
        }
    }

    tbody {
        tr {
            td {
                padding: 8px 15px;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }

            &:nth-child(odd) {
                td {
                    background-color: $cWhite;
                }
            }

            &:nth-child(even) {
                td {
                    background-color: $cGrayTable;
                }
            }

            &:last-child {
                td {

                    &:first-child {
                        border-bottom-left-radius: 10px;
                    }

                    &:last-child {
                        border-bottom-right-radius: 10px;
                    }
                }
            }
        }
    }



    .btn {
        font-size: 14px;
        width: auto;
        padding: 7px 10px;
    }
}

/*********Calendar******/



.fc-theme-standard td, .fc-theme-standard th {
    border: 1px solid $cGrayShadow;
}

.fc-timegrid-cols {
    background-color: $cWhite;
}

.calendar-container {
    .fc {
        margin-top: 50px;

        @include med-767 {
            margin-top: 30px;
        }

        .fc-toolbar-title {
            font-size: 25px;

            @include med-767 {
                font-size: 20px;
            }

            @include med-575 {
                font-size: 18px;
            }
        }

        .fc-toolbar {

            @include med-767 {
                flex-direction: column;
                justify-content: center;

                .fc-toolbar-chunk {
                    margin: 5px 0px;
                }

                .fc-toolbar-chunk:nth-child(1) {
                    order: 2;
                }

                .fc-toolbar-chunk:nth-child(2) {
                    order: 3;
                }

                .fc-toolbar-chunk:nth-child(3) {
                    order: 1;
                }
            }

            &.fc-header-toolbar {
                margin-bottom: 15px;

                @include med-767 {
                    margin-bottom: 5px;
                }
            }
        }




        .fc-prev-button, .fc-next-button {
            border-radius: 50%;
            width: 30px;
            height: 30px;
            padding: 0px;
            line-height: 0.9;
            cursor: pointer;
            background-color: $cWhite;
            color: $cPurple;
            border: 1px solid $cPurple;
            @include noselect;
            box-shadow: none !important;

            &:hover, &:active, &:focus {
                border: 1px solid $cpurpleLight !important;
                background-color: $cPurpleSecondaryHover !important;
                color: $cpurpleLight !important;
                text-decoration: none;
                border: none;
                box-shadow: none;
            }





            .fc-icon {
                line-height: 1;
                font-size: 1em;
            }
        }



        .fc-today-button {
            cursor: pointer;
            display: inline-block;
            background-color: $cPurple;
            color: $cWhite;
            border-radius: 5px;
            padding: 5px 20px;
            font-weight: 400;
            border: 2px solid $cPurple;
            font-size: 14px;
            text-align: left;
            @include noselect;
            box-shadow: none !important;


            &:hover, &:active, &:focus {
                background-color: $cpurpleLight !important;
                border: 2px solid $cpurpleLight !important;
                color: $cWhite;
                text-decoration: none;
                border: none;
            }

            &:disabled {
                background-color: $cpurpleLight !important;
                border: 2px solid $cpurpleLight !important;
                color: $cWhite;
                text-decoration: none;
                border: none;
                cursor: not-allowed;
            }
        }

        .fc-addAppointmentButton-button {
            font-size: 14px;
            cursor: pointer;
            background-color: $cWhite;
            color: $cPurple;
            border-radius: 5px;
            padding: 5px 20px;
            font-weight: 400;
            border: 2px solid $cPurple;
            @include noselect;
            box-shadow: none !important;

            &:hover, &:active, &:focus {
                border: 2px solid $cpurpleLight !important;
                background-color: $cPurpleSecondaryHover !important;
                color: $cpurpleLight !important;
                text-decoration: none;
                border: none;
            }
        }

        .fc-timegrid-col-events {
            margin: 0px;
        }

        .fc-timegrid-col.fc-day-today {
            background-color: #f6f6fd;
        }

        .fc-timegrid-slot-minor {
            border-top: none;
        }

        &:nth-child(odd) {
            td {
                background-color: transparent;
            }
        }

        &:nth-child(even) {
            td {
                background-color: transparent;
            }
        }


        .fc-timegrid {
            font-size: 14px;

            @include med-575 {
                font-size: 10px;
            }




            .fc-col-header {

                .fc-day {
                    a {
                        color: $cWhite;
                        text-decoration: none;
                        line-height: 100%;
                        padding: 5px 0px;
                    }
                }
            }



            .fc-v-event {

                .fc-event-main-frame {
                    align-items: center;
                    justify-content: center;

                    @include med-767 {
                        align-items: start;
                        justify-content: start;
                    }


                    .fc-event-title-container {
                        flex-grow: 0;
                    }
                }
            }
        }
    }
}


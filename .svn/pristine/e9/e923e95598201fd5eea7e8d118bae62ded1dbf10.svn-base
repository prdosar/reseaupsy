    width: 100%;
}

.tt-menu {
    margin: 0px !important;
}

.tooltip-inner {
    background-color: $cPurple;
    opacity: 0.6;
    font-size: 12px;
}

.tooltip.bs-tooltip-top .tooltip-arrow::before {

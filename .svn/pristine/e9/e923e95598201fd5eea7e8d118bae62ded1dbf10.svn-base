.modal {
    .modal-header {
        background-color: $cpurpleLight;
        color: $cWhite;
        justify-content: center;
        position: relative;
        font-family: $fDMSerif;
        padding: 15px 50px;

        @include med-991 {
            padding: 10px 35px;
        }

        .modal-title {
            font-size: 28px;
            line-height: 115%;

            @include med-991 {
                font-size: 24px;
            }
        }

        .btn-close {
            position: absolute;
            right: 15px;
            top: 17px;
            margin: 0px;
            padding: 0px;
            opacity: 1;
            background: none;
            background-color: none;
            width: 30px;
            height: 30px;

            @include med-991 {
                right: 10px;
                top: 12px;
                width: 20px;
                height: 20px;
            }


            &:focus {
                box-shadow: none;
            }

            i {
                color: $cWhite;
                font-size: 30px;
                line-height: 30px;

                @include med-991 {
                    font-size: 20px;
                    line-height: 20px;
                }

                @include med-767 {
                    font-size: 20px;
                    line-height: 20px;
                }
            }
        }
    }



    .modal-body {
        font-size: 16px;
        font-weight: 300;


        .form-group {
            margin: 10px 0px;

            @include med-991 {
                margin: 7px 0px;
            }
        }

        .bg-success {
            background-color: $cGreenSuccess !important;
            border-color: $cGreenSuccessBorder;
            border-radius: 4px;
        }

        .bottom-separator {
            border-bottom: 1px solid #f0f0f0;
            padding-bottom: 3px;
            margin-bottom: 3px;
        }




        .long-text {
            font-size: 15px;
            line-height: 135%;
        }

        .alert {
            font-size: 15px;
            line-height: 135%;
        }

        .text-hilight {
            background-color: #f0f0f0;
            padding: 10px 10px;
            border-radius: 4px;
        }
    }



    .smalltext {
        font-style: italic;
        padding: 15px 0px;
        font-size: 14px;
    }


    .btn {
        width: auto;
        text-align: center;
        padding: 8px 15px;
    }
}


.availability {


#privacypolicy, #termsofuse {
	margin-top: 30px;

	ul, ol {
		padding-bottom: 20px;
	}



	ol {
		counter-reset: item;


		&:not([type='i']) {



			& > li {
				display: block;
			}

			& > li:before {
				content: counters(item, ".") ". ";
				counter-increment: item;
				margin-left: -22px;
				font-weight: bold;
			}
		}
	}

	.mb16 {
		margin-bottom: 1rem;
		display: inline-block;
	}


	table {
		tbody {
			tr {
				td {
					white-space: normal;
					background-color: transparent;

					&:first-child {
						width: 30%;
					}
				}
			}
		}
	}
}

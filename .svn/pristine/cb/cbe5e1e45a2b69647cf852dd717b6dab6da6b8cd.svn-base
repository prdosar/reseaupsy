				margin-right: 10px;

				@include med-450 {
					width: 40px;
					height: 40px;
				}
			}

			.welcome-title {
				font-family: $fDMSerif;
				font-size: 50px;
				line-height: 125%;
				text-overflow: ellipsis;
				white-space: nowrap;
				overflow: hidden;
				max-width: 705px;

				@include med-1499 {
					max-width: 635px;
				}

				@include med-1199 {
					max-width: 565px;
				}

				@include med-991 {
					max-width: 495px;
				}

				@include med-767 {
					max-width: 410px;
				}

				@include med-575 {
					max-width: 175px;
					line-height: 100%;
				}





				@include med-1499 {
					font-size: 45px;
				}

				@include med-1199 {
					font-size: 40px;
				}

				@include med-991 {
					font-size: 35px;
				}

				@include med-767 {
					font-size: 32px;
				}

				@include med-575 {
					font-size: 25px;
				}
			}

			#navbarAccount {
				width: 60px;
				height: 60px;
				padding-bottom: 0px;

				@include med-450 {
					width: 40px;
					height: 40px;
				}


				&::after {
					display: none;
				}
			}

			.navbar-nav {
				.nav-item {
					.nav-link {
						font-size: 15px;
						color: #757778;
						display: flex;
						align-items: center;
						padding: 0px 0px 10px 0px;
						margin: 0px 30px 0px 5px;

						@include med-767 {
							margin: 0px;
						}


						.menu-icon {
							filter: invert(50%) sepia(6%) saturate(109%) hue-rotate(155deg) brightness(92%) contrast(90%);
							width: 25px;
							height: 25px;
							margin-right: 5px;
						}

						.menu-name {
							@include med-767 {
								display: none;
							}
						}


						&.actif {
							border-bottom: 3px solid $cpurpleLight;
							color: $cBlack;

							.menu-icon {
								filter: none;
							}
						}
					}
				}

				.dropdown-item.active, .dropdown-item:active {
					color: #fff;
					text-decoration: none;
					background-color: $cpurpleLight;
				}
			}

			&.main-navbar {

				.dropdown-menu[data-bs-popper] {

					&.menu-right {
						top: 100%;
						right: 0px;
						left: auto;
						margin-top: 0.125rem;

						@include med-575 {
							left: -20px;
							right: -20px;
							margin-top: 0px;
						}
					}


					@include med-575 {
						left: -20px;
						right: -20px;
						margin-top: 0px;
					}
				}
			}

			&.user-navbar {

				.dropdown-menu[data-bs-popper] {
					&.menu-right {
						top: 100%;
						right: 0px;
						left: auto;
						margin-top: 0.125rem;
					}
				}
			}
		}
	}
}

